@*Edit page for items(connect with ItemsController)*@
@model ShoppingCart.Models.ItemViewModel



@{
    ViewData["Title"] = "Product Edit";
}

<h1>Edit</h1>

<h4>Item</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <div class="title-search">
                    <input asp-for="Title" class="my-add-input no-outline" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <div class="title-search">
                    <input asp-for="Category" class="my-add-input no-outline" />
                    <span asp-validation-for="Category" class="text-danger"></span>
                </div>
                </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <div class="title-search">
                    <input asp-for="Price" class="my-add-input no-outline" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>
                </div>
                <div class="form-group">
                    <label asp-for="Image" class="control-label"></label>
                    <input asp-for="Image" class="form-control" type="file" />

                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
</form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
